{% extends 'base.html.twig' %}

{% block title %}
    Recette - Connexion
{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="mt-4">Formulaire de connexion</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}

            <div class="alert alert-dismissible alert-primary">
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        {% endif %}

        <form action="{{ path('security.login') }}" method="post">

            <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse email</label>
                <input type="email" class="form-control" id="username" placeholder="email@modeste.com" value="{{ last_username }}" name="_username"/>
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Password</label>
                <input type="password" class="form-control" id="password" placeholder="******" name="_password"/>
            </div>

            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>

    </div>

{% endblock %}
